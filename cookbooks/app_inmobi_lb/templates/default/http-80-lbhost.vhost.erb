<VirtualHost *:80>

     ServerName <%= node[:inmobi_lb][:host] %>
     UseCanonicalName On
     
     DocumentRoot /opt/mkhoj/share/webapp/<%= node[:rails][:application_name] %>/public
      <DirectoryMatch  /\.git/|/\.svn/ >
       Deny from all
     </DirectoryMatch>
     <Directory "/opt/mkhoj/share/webapp/<%= node[:rails][:application_name] %>/public">
      Options FollowSymLinks
      AllowOverride None
      Order allow,deny
      Allow from all
     </Directory>

     RewriteEngine On
     # Uncomment for rewrite debugging
     #RewriteLog /var/log/httpd/http_rewrite_log
     #RewriteLogLevel 9

     # Enable status page for monitoring purposes 
     RewriteCond %{REMOTE_ADDR} ^(127.0.0.1)
     RewriteRule ^(/server-status) $1 [H=server-status,L]

     # Serve any existing local files directly (except actionable ones)
     RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_FILENAME} -fd
     RewriteCond %{REQUEST_FILENAME} !\.php|\.jsp|\.do|\.action$ [NC]
     RewriteRule ^/(.*)$ /$1 [QSA,L]

     # Proxy the rest to the load balancer 
     RewriteRule ^/(.*)$ http://127.0.0.1:<%= node[:inmobi_lb][:bind_port] %>%{REQUEST_URI} [P,QSA,L]

     LogLevel warn

     # Deflate
     AddOutputFilterByType DEFLATE text/html text/plain text/xml application/xml application/xhtml+xml text/javascript text/css application/x-javascript
     BrowserMatch ^Mozilla/4 gzip-only-text/html
     BrowserMatch ^Mozilla/4\.0[678] no-gzip
     BrowserMatch \bMSIE !no-gzip !gzip-only-text/html

</VirtualHost>
